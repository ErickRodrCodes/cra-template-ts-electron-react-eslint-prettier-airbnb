{
    "name": "cra-template-ts-electron-react-eslint-prettier-airbnb",
    "version": "0.2.1",
    "main": "template.json",
    "description": "An All-in-one template to create Electron applications with Create React App, TypeScript 4.1.3, support for SASS/SCSS files, Prettier and ESLint configurations recommended by Airbnb, and support for Recoil State Management Library.",
    "keywords": [
        "typescript",
        "electron",
        "react",
        "recoil",
        "eslint",
        "prettier",
        "airbnb",
        "ts-electron-react-eslint-prettier-airbnb"
    ],
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tbogard/cra-ts-electron-react-eslint-prettier-airbnb.git"
    },
    "homepage": "https://github.com/tbogard/cra-ts-electron-react-eslint-prettier-airbnb#readme",
    "bugs": {
        "url": "https://github.com/tbogard/cra-ts-electron-react-eslint-prettier-airbnb/issues"
    },
    "dependencies": {},
    "git": {
        "changelog": "npx auto-changelog --stdout --commit-limit false -u --template https://raw.githubusercontent.com/release-it/release-it/master/templates/changelog-compact.hbs"
    },
    "hooks": {
        "after:bump": "npx auto-changelog -p"
    },
    "devDependencies": {
        "@release-it/keep-a-changelog": "^2.2.2"
    },
    "plugins": {
        "@release-it/keep-a-changelog": {
            "filename": "CHANGELOG.md"
        }
    }
}
