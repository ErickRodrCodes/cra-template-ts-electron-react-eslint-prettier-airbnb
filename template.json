{
    "package": {
        "main": "public/electron.js",
        "homepage": "./",
        "dependencies": {
            "@testing-library/jest-dom": "^5.11.9",
            "@testing-library/react": "^11.2.3",
            "@testing-library/user-event": "^12.6.0",
            "@types/jest": "^26.0.20",
            "@types/react": "^17.0.0",
            "@types/react-dom": "^17.0.0",
            "@typescript-eslint/eslint-plugin": "^4.14.0",
            "@typescript-eslint/parser": "^4.14.0",
            "electron": "^11.2.1",
            "electron-squirrel-startup": "^1.0.0",
            "eslint": "^7.18.0",
            "eslint-config-airbnb-typescript": "^12.0.0",
            "eslint-config-prettier": "^7.2.0",
            "eslint-plugin-import": "^2.22.1",
            "eslint-plugin-import-helpers": "^1.1.0",
            "eslint-plugin-jsx-a11y": "^6.4.1",
            "eslint-plugin-prettier": "^3.3.1",
            "eslint-plugin-react": "^7.22.0",
            "eslint-plugin-react-hooks": "^4.2.0",
            "node-sass": "^4.14.1",
            "prettier": "^2.2.1",
            "react": "^17.0.1",
            "react-dom": "^17.0.1",
            "react-scripts": "^4.0.1",
            "typescript": "4.1.3",
            "web-vitals": "^1.1.0"
        },
        "scripts": {
            "start": "tsc-watch main/electron.ts --outDir ./public --esModuleInterop true --sourceMap true --removeComments true --onSuccess \"yarn launch:dev\"",
            "build": "react-app-rewired build",
            "test": "react-app-rewired test",
            "eject": "react-scripts eject",
            "add:component": "npx generate-react-cli component",
            "only:react": "react-app-rewired start",
            "only:electron": "electron-forge start",
            "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx main/ --ext .tsx",
            "lint:scss": "stylelint \"src/**/*.scss\"",
            "lint:fix": "yarn lint:scss --fix && yarn lint --fix",
            "launch:dev": "concurrently -k \"yarn only:react\" \"yarn run electron:dev\"",
            "electron:dev": "wait-on tcp:3000 && electron .",
            "package": "react-app-rewired build && electron-forge package",
            "make": "react-app-rewired build && electron-forge make"
        },
        "eslintConfig": {
            "extends": "react-app"
        },
        "browserslist": {
            "production": [
                ">0.2%",
                "not dead",
                "not op_mini all"
            ],
            "development": [
                "last 1 chrome version",
                "last 1 firefox version",
                "last 1 safari version"
            ]
        },
        "devDependencies": {
            "@electron-forge/cli": "^6.0.0-beta.54",
            "@electron-forge/maker-deb": "^6.0.0-beta.54",
            "@electron-forge/maker-rpm": "^6.0.0-beta.54",
            "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
            "@electron-forge/maker-zip": "^6.0.0-beta.54",
            "@types/electron": "^1.6.10",
            "@types/electron-devtools-installer": "^2.2.0",
            "@types/electron-is-dev": "^1.1.1",
            "concurrently": "^5.3.0",
            "electron-devtools-installer": "^3.1.1",
            "electron-is-dev": "^1.2.0",
            "husky": "^4.3.8",
            "lint-staged": "^10.5.3",
            "react-app-rewire-aliases": "^0.2.0",
            "react-app-rewired": "^2.1.8",
            "recoil": "^0.1.2",
            "stylelint": "^13.9.0",
            "stylelint-config-recommended-scss": "^4.2.0",
            "stylelint-scss": "^3.18.0",
            "tsc-watch": "^4.2.9",
            "wait-on": "^5.2.1"
        },
        "config": {
            "forge": {
                "packagerConfig": {},
                "makers": [
                    {
                        "name": "@electron-forge/maker-squirrel",
                        "config": {
                            "name": "test_spectrum"
                        }
                    },
                    {
                        "name": "@electron-forge/maker-zip",
                        "platforms": [
                            "darwin"
                        ]
                    },
                    {
                        "name": "@electron-forge/maker-deb",
                        "config": {}
                    },
                    {
                        "name": "@electron-forge/maker-rpm",
                        "config": {}
                    }
                ]
            }
        },
        "lint-staged": {
            "src/**/*.{ts,tsx}": [
                "prettier --write",
                "eslint src/ --ext .js,.jsx,.ts,.tsx --fix"
            ],
            "main/**/*.{ts,tsx}": [
                "prettier --write",
                "eslint public/ --ext .ts,.tsx --fix"
            ],
            "src/**/*.{css,scss}": [
                "prettier --write",
                "stylelint \"src/**/*.scss\" --fix"
            ]
        },
        "husky": {
            "hooks": {
                "pre-commit": "lint-staged"
            }
        }
    }
}